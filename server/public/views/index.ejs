<form name="server" method="post" id="server-form" action="/users/index">
<div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name">
</div>
<div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username">
</div>
<div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Email" name="email">
</div>
<button type="submit" class="btn btn-default">add</button>
</form>
<form name="change-form" method="post">
<ul>
<% for(var i=0; i<users.length; i++) {%>
   <li>
   <%= users[i].name %>
   <%= users[i].username %>
   <%= users[i].email %>
   </li>
   <button type="submit" formaction="/users/edit/<%=users[i]._id%>">Edit</button>
   <button type="submit" formaction="/users/delete/<%=users[i]._id%>">Delete</button>
<% } %>
</ul>
</form>